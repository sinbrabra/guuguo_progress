<resources>
    <declare-styleable name="MyProgressRoundBarView">
        <attr name="round_bar_center_text" format="string"/>
        <attr name="round_bar_center_text_color" format="color"/>
        <attr name="round_bar_finished_color" format="color"/>
        <attr name="round_bar_unfinished_color" format="color"/>
        <attr name="round_bar_progress" format="integer"/>
        <attr name="round_bar_progress_max" format="integer"/>
        <attr name="round_bar_progress_startangle" format="integer"/>
        <attr name="round_bar_progress_endangle" format="integer"/>
        <attr name="round_bar_center_text_size" format="dimension"/>
        <attr name="round_bar_width" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MyProgressHalfCircleBarView">
        <attr name="half_center_text" format="string"/>
        <attr name="half_center_text_color" format="color"/>
        <attr name="half_finished_color" format="color"/>
        <attr name="half_unfinished_color" format="color"/>
        <attr name="half_background_color" format="color"/>
        <attr name="half_progress" format="integer"/>
        <attr name="half_progress_max" format="integer"/>
        <attr name="half_center_text_size" format="dimension"/>
        <attr name="half_width" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MyProgressInstrument">
        <attr name="Instrument_center_text" format="string"/>
        <attr name="Instrument_center_text_color" format="color"/>
        <attr name="Instrument_finished_color" format="color"/>
        <attr name="Instrument_background_color" format="color"/>
        <attr name="Instrument_progress" format="integer"/>
        <attr name="Instrument_progress_max" format="integer"/>
        <attr name="Instrument_center_text_size" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MyProgressWave">
        <attr name="wave_progress" format="float"/>
        <attr name="wave_max" format="integer"/>
        <attr name="wave_unfinished_color" format="color"/>
        <attr name="wave_circle_color" format="color"/>
        <attr name="wave_circle_width" format="dimension"/>
        <attr name="wave_enable_center_text" format="boolean"/>
        <attr name="wave_enable" format="boolean"/>

        <attr name="wave_finished_color" format="color"/>
        <attr name="wave_text_size" format="dimension"/>
        <attr name="wave_text_color" format="color"/>
        <attr name="wave_prefix_text" format="string"/>
        <attr name="wave_force_title" format="string"/>
        <attr name="wave_suffix_text" format="string"/>
        <attr name="wave_frequency" format="float"/>
        <attr name="wave_swing" format="float"/>
        <attr name="wave_speed" format="float"/>
        <attr name="wave_mask" format="reference"/>
        <attr name="wave_style" format="integer">
            <enum name="circle" value="0"/>
            <enum name="square" value="1"/>
        </attr>

    </declare-styleable>
</resources>